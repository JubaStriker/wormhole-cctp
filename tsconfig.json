{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",           // allows root-based paths
      "paths": {
      "src/*": ["src/*"]
      }
    },
    "ts-node": {
      "esm": true
    }
  }
  